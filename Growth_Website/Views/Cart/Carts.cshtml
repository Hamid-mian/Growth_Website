@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Growth_Website.Models.Cart>

<section class="h-100 h-custom" style="background-color: #eee; padding-top: 154px;">
  <div class="container py-3 h-100" style = "padding-top: 154px;">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card">
          <div class="card-body p-4">

            <div class="row">

              <div class="col-lg-12">
                <h5 class="mb-3"><i
                      class="me-2 "></i>Shoping Cart</h5>
                <hr>

              @foreach(var a in Model)
               {

                <div class="card mb-3">
                  <div class="card-body">
                    <div class="d-flex justify-content-between">
                      <div class="d-flex flex-row align-items-center">
                        <div>
                          <img
                            src="~/Uploads/@a.imagename"
                            class="img-fluid rounded-3" alt="Shopping item" style="width: 65px;">
                        </div>
                        <div class="ms-3">
                          <h5>@a.productName</h5>
                        </div>
                      </div>
                      <div class="d-flex flex-row align-items-center">
                        
                        <div style="width: 80px;">
                          <h5 class="mb-0">$@a.price</h5>
                        </div>
                        <a onclick="cartdelete(this,'@a.customerId','@a.productName')" style="color: #cecece;"><i class="fas fa-trash-alt"></i></a>
                      </div>
                    </div>
                  </div>
                </div>
               }
 

                <div style="padding-top: 25px;" class=" d-flex justify-content-center align-items-center ">
                <button onclick="allcartdelete(this)" type="submit" class="btn btn-info btn-block btn-lg " >
                      Checkout <i class="fas fa-long-arrow-alt-right ms-2"></i>
                    </button>
              </div>
             </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
