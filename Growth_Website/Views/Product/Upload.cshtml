@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model testing2.Models.Signup;



<section class="vh-150 bg-image" style="padding-top:104px;">
  <div class="mask d-flex align-items-center gradient-custom-3">
    <div class="container">
      <div class="row d-flex justify-content-center align-items-center ">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card" style="border-radius: 10px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-4">Upload File</h2>
              <form method="post" action="/Product/Upload" enctype="multipart/form-data" >
                 <div class="form-outline mb-3">
                                   <h4>@ViewBag.s</h4>

                  <select id="productType" name="productType" class="form-control form-control-lg" >
                     <option value="specials">specials</option>
                     <option value="Popular">Popular</option>
                     <option value="collections">collections</option>
                   </select>
                  <label class="form-label" for="productType">Please Enter The Product Type</label>
                </div>

                 <div class="form-outline mb-3">
                  <input type="number" id="price"  name="price" class="form-control form-control-lg" />
                  <label class="form-label" for="price">Enter Price</label>
                </div>

                <div class="form-outline mb-3">
                  <input type="text" id="productName"  name="productName" class="form-control form-control-lg" />
                  <label class="form-label" for="productName">Enter Product Name</label>
                </div>
                
                 <div class="form-outline mb-3">
                     <input type="file" name="postedFiles"  multiple class = "form-control form-control-lg"/> 
                     <br />
                     <h2 class = "text-white">Select File: </h2>

                     <h2 class = "text-white">@ViewBag.Message</h2>
                   
                </div>

               <div class="d-flex justify-content-center">
                  <button type="submit"
                    class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Submit</button>
                </div>

             
              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
