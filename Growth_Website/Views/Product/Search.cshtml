@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Growth_Website.Models.Products>

<section class="h-100 h-custom" style="background-color: #eee; padding-top: 104px;">
  <div class="container py-3 h-100" style = "padding-top: 104px;">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card">
          <div class="card-body p-4">
            <div class="row p-4" >

             <div class="form-outline mb-3">
                                   <h4>@ViewBag.Message</h4>

                  <select id="productType" name="productType" class="form-control form-control-lg" >
                     <option value="specials">specials</option>
                     <option value="Popular">Popular</option>
                     <option value="collections">collections</option>
                   </select>
                  <label class="form-label" for="productType">Please Enter The Product Type</label>
                </div>

                 <div class="form-outline mb-3">
                  <input type="number"  id="price"  name="price" class="form-control form-control-lg" />
                  <label class="form-label" for="price">Enter Price</label>
                </div>
            </div>


            <div  >
                <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">CreatedBy</th>
    </tr>
  </thead>
  <tbody id="ajaxdata" >
    
  </tbody>
</table>
            </div>


             <div class="d-flex justify-content-center">
                 
             <button type="submit" onclick="searching()"  class = "btn btn-primary mt-3">Search</button>
             
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

