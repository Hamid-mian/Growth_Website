@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using testing2.Models
@model IEnumerable<Growth_Website.ViewModel.ProductViewModel>
     <!-- special products -->
    <section id = "special" class = "py-5">
        <div class = "container"  style = "padding-top: 104px;">
            <div class = " text-center py-5">
                <h2 class = "position-relative ">Special Selection</h2>
            </div>
                        

         <div class = "special-list row g-0">
             @foreach(var a in Model)
             {
                <div class = "col-md-6 col-lg-4 col-xl-3 p-2">
                    <div class = "special-img position-relative overflow-hidden">
                        <img src = "~/Uploads/@a.imagename" class = "w-100">
                       
                    </div>
                    <div class = "text-center">
                        <p class = "text-capitalize mt-3 mb-1">@a.productName</p>
                        <span class = "fw-bold d-block">  $@a.price </span><br>
                        <button type="button"  onclick="sendData(this,'@a.productName','@a.imagename','@a.price','specials')" class = "btn btn-primary mt-3">Add to Cart</button>
                  
                    </div>
                </div>
             }

            </div>

        </div>
    </section>
    <!-- end of special products -->


